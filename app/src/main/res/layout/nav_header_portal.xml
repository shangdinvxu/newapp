<?xml version="1.0" encoding="utf-8"?>
<!-- 侧滑栏中头像部分 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="313px"
    android:layout_marginTop="75px"
    android:orientation="vertical"
    >
        <!-- 头像 -->
        <com.linkloving.rtring_new.logic.utils.CircleImageView
            android:id="@+id/user_head"
            android:layout_gravity="center_horizontal"
            android:layout_width="168px"
            android:layout_height="168px"
            android:layout_marginBottom="36px"
            android:src="@mipmap/default_avatar_m"
            app:border_width="2dp"
            app:border_color="@color/yellow_title"
            android:contentDescription="@string/imageView" />
        <!-- 名称 -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36px"
            android:text="用户昵称"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/yellow_title"
            android:textSize="@dimen/m00_font_size_30pt"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <!--android:background="@drawable/side_nav_bar"-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/menu_deliver"
        android:contentDescription="@string/imageView"/>

</LinearLayout>
