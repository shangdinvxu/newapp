<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_set"
    tools:context="com.linkloving.rtring_new.logic.UI.personal.EntInfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:background="@color/orange">
        <!-- 头像 -->
        <ImageView
            android:id="@+id/ent_head"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:src="@mipmap/logo"
            />
    </RelativeLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="20dp"
                android:text="@string/ent_name"
                android:gravity="center|left"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
        <TextView
            android:gravity="left|center"
            android:id="@+id/ent_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:text="湖北银行"
          />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/menu_deliver"
            android:contentDescription="@string/imageView"/>
        <LinearLayout
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:textSize="20dp"
                android:text="@string/ent_address"
                android:gravity="center|left"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                />
            <TextView
                android:textSize="18dp"
                android:id="@+id/ent_address"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="60dp">
        <TextView
            android:id="@+id/exit_ent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/orange"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/main_more_exit_ent"/>
    </LinearLayout>
</LinearLayout>
